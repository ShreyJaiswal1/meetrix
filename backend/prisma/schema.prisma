// Prisma schema for Meetrix
// Using PostgreSQL (Supabase free tier)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ─── Users ───
model User {
  id            String       @id @default(cuid())
  name          String
  email         String       @unique
  passwordHash  String?      @map("password_hash")
  avatarUrl     String?      @map("avatar_url")
  role          Role         @default(STUDENT)
  provider      AuthProvider @default(EMAIL)
  providerId    String?      @map("provider_id")
  onboarded     Boolean      @default(true)
  emailVerified Boolean      @default(false) @map("email_verified")
  createdAt     DateTime     @default(now()) @map("created_at")

  // Relations
  classesCreated  Class[]        @relation("TeacherClasses")
  classMemberships ClassMember[]
  resources       Resource[]
  assignments     Assignment[]
  submissions     Submission[]
  announcements   Announcement[]
  messagesSent    Message[]
  sessionsHosted  LiveSession[]
  notifications   Notification[]

  @@unique([provider, providerId])
  @@map("users")
}

// ─── Verification Codes (OTP) ───
model VerificationCode {
  id        String   @id @default(cuid())
  email     String
  code      String
  type      CodeType
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@index([email, code, type])
  @@map("verification_codes")
}

enum CodeType {
  EMAIL_VERIFY
  PASSWORD_RESET
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
}

enum AuthProvider {
  EMAIL
  GOOGLE
}

// ─── Classes ───
model Class {
  id          String   @id @default(cuid())
  name        String
  subject     String
  description String?
  inviteCode  String   @unique @map("invite_code")
  coverUrl    String?  @map("cover_url")
  teacherId   String   @map("teacher_id")
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  teacher       User           @relation("TeacherClasses", fields: [teacherId], references: [id])
  members       ClassMember[]
  resources     Resource[]
  assignments   Assignment[]
  announcements Announcement[]
  messages      Message[]
  liveSessions  LiveSession[]

  @@map("classes")
}

// ─── Class Members ───
model ClassMember {
  id       String      @id @default(cuid())
  classId  String      @map("class_id")
  userId   String      @map("user_id")
  role     MemberRole  @default(STUDENT)
  joinedAt DateTime    @default(now()) @map("joined_at")

  class Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([classId, userId])
  @@map("class_members")
}

enum MemberRole {
  TEACHER
  STUDENT
}

// ─── Resources ───
model Resource {
  id         String       @id @default(cuid())
  classId    String       @map("class_id")
  uploaderId String       @map("uploader_id")
  title      String
  type       ResourceType
  url        String
  folder     String?
  createdAt  DateTime     @default(now()) @map("created_at")

  class    Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  uploader User  @relation(fields: [uploaderId], references: [id])

  @@map("resources")
}

enum ResourceType {
  PDF
  IMAGE
  VIDEO
  DOCUMENT
  LINK
}

// ─── Assignments ───
model Assignment {
  id          String           @id @default(cuid())
  classId     String           @map("class_id")
  teacherId   String           @map("teacher_id")
  title       String
  description String?
  dueDate     DateTime         @map("due_date")
  maxMarks    Int              @map("max_marks")
  status      AssignmentStatus @default(PUBLISHED)
  attachments String[]
  createdAt   DateTime         @default(now()) @map("created_at")

  class       Class        @relation(fields: [classId], references: [id], onDelete: Cascade)
  teacher     User         @relation(fields: [teacherId], references: [id])
  submissions Submission[]

  @@map("assignments")
}

enum AssignmentStatus {
  DRAFT
  PUBLISHED
  CLOSED
}

// ─── Submissions ───
model Submission {
  id           String   @id @default(cuid())
  assignmentId String   @map("assignment_id")
  studentId    String   @map("student_id")
  fileUrl      String?  @map("file_url")
  textBody     String?  @map("text_body")
  marks        Int?
  feedback     String?
  submittedAt  DateTime @default(now()) @map("submitted_at")

  assignment Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  student    User       @relation(fields: [studentId], references: [id])

  @@unique([assignmentId, studentId])
  @@map("submissions")
}

// ─── Announcements ───
model Announcement {
  id        String   @id @default(cuid())
  classId   String   @map("class_id")
  authorId  String   @map("author_id")
  content   String
  pinned    Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  class  Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  author User  @relation(fields: [authorId], references: [id])

  @@map("announcements")
}

// ─── Messages ───
model Message {
  id        String   @id @default(cuid())
  roomId    String   @map("room_id")
  senderId  String   @map("sender_id")
  content   String
  fileUrl   String?  @map("file_url")
  createdAt DateTime @default(now()) @map("created_at")

  // roomId can be a classId or a DM room id
  class  Class? @relation(fields: [roomId], references: [id], onDelete: Cascade)
  sender User   @relation(fields: [senderId], references: [id])

  @@index([roomId, createdAt])
  @@map("messages")
}

// ─── Live Sessions ───
model LiveSession {
  id           String   @id @default(cuid())
  classId      String   @map("class_id")
  hostId       String   @map("host_id")
  title        String
  scheduledAt  DateTime @map("scheduled_at")
  jitsiRoom    String   @map("jitsi_room")
  recordingUrl String?  @map("recording_url")
  createdAt    DateTime @default(now()) @map("created_at")

  class Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  host  User  @relation(fields: [hostId], references: [id])

  @@map("live_sessions")
}

// ─── Notifications ───
model Notification {
  id        String           @id @default(cuid())
  userId    String           @map("user_id")
  type      NotificationType
  content   String
  read      Boolean          @default(false)
  createdAt DateTime         @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, read])
  @@map("notifications")
}

enum NotificationType {
  ASSIGNMENT_CREATED
  SUBMISSION_GRADED
  ANNOUNCEMENT
  SESSION_LIVE
  MESSAGE
  CLASS_JOINED
}
